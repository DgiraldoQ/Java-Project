public class CuentaPersonal extends Cuenta {
    private float tasaImpuesto;

    public CuentaPersonal(String titular, String idCuenta, float saldo, float tasaImpuesto) {
        super(titular, idCuenta, saldo);
        this.tasaImpuesto = tasaImpuesto;
    }

    @Override
    public float calcularTotalIngresos() {
        // Implementación específica
        return 0;
    }

    @Override
    public float calcularTotalGastos() {
        // Implementación específica
        return 0;
    }

    @Override
    public float obtenerBalance() {
        return getSaldo() - (getSaldo() * (tasaImpuesto / 100));
    }
}

