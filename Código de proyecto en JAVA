import java.util.ArrayList;
import java.util.List;

public class CuentaEmpresarial extends Cuenta {
    private String nombreEmpresa;
    private List<Empleado> empleados;
    private float tasaIVA;

    public CuentaEmpresarial(String titular, String idCuenta, float saldo, String nombreEmpresa, float tasaIVA) {
        super(titular, idCuenta, saldo);
        this.nombreEmpresa = nombreEmpresa;
        this.tasaIVA = tasaIVA;
        this.empleados = new ArrayList<>();
    }

    // Métodos getters y setters para nombreEmpresa
    public String getNombreEmpresa() {
        return nombreEmpresa;
    }

    public void setNombreEmpresa(String nombreEmpresa) {
        this.nombreEmpresa = nombreEmpresa;
    }

    // Métodos getters y setters para empleados
    public List<Empleado> getEmpleados() {
        return empleados;
    }

    public void setEmpleados(List<Empleado> empleados) {
        this.empleados = empleados;
    }

    public void agregarEmpleado(Empleado empleado) {
        empleados.add(empleado);
    }

    public void eliminarEmpleado(Empleado empleado) {
        empleados.remove(empleado);
    }

    @Override
    public float calcularTotalIngresos() {
        // Implementación específica
        return 0;
    }

    @Override
    public float calcularTotalGastos() {
        // Implementación específica
        return 0;
    }

    @Override
    public float obtenerBalance() {
        return getSaldo() - (getSaldo() * (tasaIVA / 100));
    }
}

//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

import java.util.ArrayList;
import java.util.List;

public abstract class Cuenta {
    private String titular;
    private String idCuenta;
    private float saldo;
    private List<Transaccion> transacciones;

    public Cuenta(String titular, String idCuenta, float saldo) {
        this.titular = titular;
        this.idCuenta = idCuenta;
        this.saldo = saldo;
        this.transacciones = new ArrayList<>();
    }

    public abstract float calcularTotalIngresos();
    public abstract float calcularTotalGastos();
    public abstract float obtenerBalance();

    public void agregarTransaccion(Transaccion t) {
        transacciones.add(t);
        saldo += t.getMonto(); // Ajusta el saldo según la transacción
    }

    public void eliminarTransaccion(Transaccion t) {
        transacciones.remove(t);
        saldo -= t.getMonto(); // Ajusta el saldo según la transacción
    }

    public Transaccion buscarTransaccion(String id) {
        return transacciones.stream()
                .filter(t -> t.getIdTransaccion().equals(id))
                .findFirst()
                .orElse(null);
    }

    public String getTitular() {
        return titular;
    }

    public void setTitular(String titular) {
        this.titular = titular;
    }

    public String getIdCuenta() {
        return idCuenta;
    }

    public void setIdCuenta(String idCuenta) {
        this.idCuenta = idCuenta;
    }

    public float getSaldo() {
        return saldo;
    }

    public void setSaldo(float saldo) {
        this.saldo = saldo;
    }

    public List<Transaccion> getTransacciones() {
        return transacciones;
    }

    public void setTransacciones(List<Transaccion> transacciones) {
        this.transacciones = transacciones;
    }

}

